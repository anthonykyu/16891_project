<?xml version="1.0" ?>


<robot xmlns:xacro="http://ros.org/wiki/xacro" name="world_just_mobile">

  <xacro:include filename="$(find panda_multiple_arms)/robot_description/walls.xacro" />
  <xacro:include filename="$(find panda_multiple_arms)/robot_description/mobile_robot.xacro" />

  <xacro:walls_world/>
  <xacro:mobile_robot name="mobile_1" dims="0.25" color="white"/>
  <link name="mobile_1_temp"/>
  
  <xacro:mobile_robot name="mobile_2" dims="0.25" color="green"/>
  <link name="mobile_2_temp"/>

  <xacro:mobile_robot name="mobile_3" dims="0.25" color="blue"/>
  <link name="mobile_3_temp"/>

  <xacro:mobile_robot name="mobile_4" dims="0.25" color="black"/>
  <link name="mobile_4_temp"/>

  <!-- Mobile Robot 1 -->
  <joint name="mobile_1_x" type="prismatic">
      <parent link="world"/>
      <child link="mobile_1_temp"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="1 0 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <joint name="mobile_1_y" type="prismatic">
      <parent link="mobile_1_temp"/>
      <child link="mobile_1"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="0 1 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>


  <!-- Mobile Robot 2 -->
  <joint name="mobile_2_x" type="prismatic">
      <parent link="world"/>
      <child link="mobile_2_temp"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="1 0 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <joint name="mobile_2_y" type="prismatic">
      <parent link="mobile_2_temp"/>
      <child link="mobile_2"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="0 1 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>


  <!-- Mobile Robot 3 -->
  <joint name="mobile_3_x" type="prismatic">
      <parent link="world"/>
      <child link="mobile_3_temp"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="1 0 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <joint name="mobile_3_y" type="prismatic">
      <parent link="mobile_3_temp"/>
      <child link="mobile_3"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="0 1 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <!-- Mobile Robot 4 -->
  <joint name="mobile_4_x" type="prismatic">
      <parent link="world"/>
      <child link="mobile_4_temp"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="1 0 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <joint name="mobile_4_y" type="prismatic">
      <parent link="mobile_4_temp"/>
      <child link="mobile_4"/>
      <limit effort="1000.0" lower="0" upper="10" velocity="1"/>
      <axis xyz="0 1 0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>


</robot>

